# Minimal configuration for AI Memory MCP (agent-first)

# Core services
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8080
RUST_LOG=info

# Neo4j
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=testpass

# MinIO
MINIO_ROOT_USER=memory
MINIO_ROOT_PASSWORD=memorypass

# Embedding
EMBEDDING_SERVER_URL=http://embedding:8091
EMBEDDING_MODEL_PATH=./models/embeddinggemma-300m

# Feature flags (default offline)
ENABLE_GPT5=false
ENABLE_TLDR=false
ENABLE_VECTOR_INDEX=true
ENABLE_GRAPH_RELATIONS=true
ENABLE_MAINTENANCE=true
ENABLE_OBSERVABILITY=false

# Manifest version expected by clients
SCHEMA_VERSION=1
