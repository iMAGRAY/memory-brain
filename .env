# ===========================================
# AI/ML CONFIGURATION
# ===========================================

# Pure Transformers Approach
# Models downloaded at runtime by transformers library
# No static ONNX files needed

# ===========================================
# PERFORMANCE SETTINGS
# ===========================================

# Memory Service
MEMORY_CACHE_MB=512
MEMORY_MAX_CONNECTIONS=100
RUST_LOG=info,ai_memory_service=debug

# Threading
TOKIO_THREADS=4
RAYON_THREADS=4
PYTHON_THREADS=4

# AI Processing
WORKERS=4
BATCH_SIZE=32
MAX_SEQUENCE_LENGTH=2048

# Cache Configuration
L1_CACHE_SIZE=1000
L2_CACHE_SIZE=10000
CACHE_TTL_SECONDS=3600
COMPRESSION_ENABLED=true

# ===========================================
# DATA STORAGE
# ===========================================

DATA_DIR=./data
BACKUP_DIR=./backup

# ===========================================
# MONITORING (Optional)
# ===========================================

ENABLE_PROMETHEUS=false
ENABLE_GRAFANA=false
ENABLE_REDIS=true

# ===========================================
# ENVIRONMENT TYPE
# ===========================================

# Options: development, production
ENVIRONMENT=development
RUST_ENV=development